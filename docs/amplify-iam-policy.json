{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AmplifySecretsManagerAccess",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret"
      ],
      "Resource": "arn:aws:secretsmanager:eu-north-1:*:secret:qmssecretnamedb-*"
    },
    {
      "Sid": "AmplifyKMSDecrypt",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey"
      ],
      "Resource": "arn:aws:kms:eu-north-1:*:key/*",
      "Condition": {
        "StringEquals": {
          "kms:ViaService": "secretsmanager.eu-north-1.amazonaws.com"
        }
      }
    }
  ]
}

