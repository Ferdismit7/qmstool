  sub_business_area   String?        @db.VarChar(100)
  Name_reports        String?        @db.VarChar(100)
  doc_type            String?        @db.VarChar(50)
  priority            String?        @db.VarChar(20)
  doc_status          String?        @db.VarChar(100)
